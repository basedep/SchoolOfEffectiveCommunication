<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchoolOfEffectiveCommunication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->

        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <!--SearchView query text color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--SearchView query hint text color-->
        <item name="android:textColorHint">@color/white</item>

        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_selector</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_selector</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/bottom_navigation_shape</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="iconifiedByDefault">false</item>
        <item name="hintEnabled">true</item>
        <item name="defaultQueryHint">Поиск...</item>

        <!--remove search bottom line -->
        <item name="queryBackground">@color/transparent</item>
    </style>


    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="iconifiedByDefault">false</item>
        <item name="hintEnabled">true</item>
        <item name="lineHeight">10dp</item>
        <!--remove bottom line -->
    </style>

</resources>